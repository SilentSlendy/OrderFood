        <StackPanel Grid.Row="2" Padding="10">
            <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0">
                    Tạm tính: 
                </TextBlock>
                <TextBlock Grid.Column="1" HorizontalAlignment="Right">
                    <Run Text="{x:Bind ViewModel.SubTotal, Converter={StaticResource DoubleToCurrencyConverter}, Mode=OneWay}"/>
                </TextBlock>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0">
                Thuế:
                </TextBlock>
                <TextBlock Grid.Column="1" HorizontalAlignment="Right">
                    <Run Text="{x:Bind ViewModel.Tax, Converter={StaticResource DoubleToCurrencyConverter}, Mode=OneWay}"/>
                </TextBlock>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0">
                Tổng cộng:
                </TextBlock>
                <TextBlock Grid.Column="1" HorizontalAlignment="Right">
                    <Run Text="{x:Bind ViewModel.Total, Converter={StaticResource DoubleToCurrencyConverter}, Mode=OneWay}"/>
                </TextBlock>
            </Grid>
            <StackPanel Margin="15" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button HorizontalContentAlignment="Stretch" CornerRadius="6" Content="Lưu hóa đơn" Height="40" HorizontalAlignment="Center" Click="SaveInvoice_Click"/>
                <Button CornerRadius="6" Content="Thanh toán" Height="40" HorizontalAlignment="Center" Click="PayInvoice_Click"/>
            </StackPanel>
            <Grid>
            <TeachingTip
         x:Name="SaveSuccessTeachingTip"
         Subtitle="Hóa đơn đã được lưu thành công."
         Background="LightBlue"
         IsOpen="False"/>
            </Grid>
        </StackPanel>
        
    </Grid>
</UserControl>
