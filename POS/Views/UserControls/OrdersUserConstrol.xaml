        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.Items}" Background="#f8f8ea" BorderBrush="Beige" BorderThickness="0 5 0 5">

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:Order">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel CornerRadius="10" Margin="0 0 8 0"> 
                        <Image Grid.Column="0" Source="{x:Bind ImagePath}" MaxHeight="50" MaxWidth="50" Name="SelectedProductImage" Stretch="Uniform"/>
                        </StackPanel>
                            <StackPanel Grid.Column="1">
                            <TextBlock>
                                <Run Text="{x:Bind Name, Mode=OneWay}"/>: <Run Text="{x:Bind Price, Converter={StaticResource CurrencyConverter}, Mode=OneWay}"/> x <Run Text="{x:Bind Quantity, Mode=OneWay}"/>
                            </TextBlock>
                            <TextBlock Foreground="Gray">
                                <Run Text="{x:Bind Note, Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel  Grid.Column="2" HorizontalAlignment="Right" Orientation="Vertical">
                            <TextBlock>
                                <Run Text="{x:Bind Total, Converter={StaticResource CurrencyConverter}, Mode=OneWay}"/>
                            </TextBlock>
                            <Button HorizontalAlignment="Right" Background="Transparent" BorderBrush="Transparent" Click="DeleteOrder_Click">
                                <SymbolIcon Symbol="Delete"></SymbolIcon>
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

