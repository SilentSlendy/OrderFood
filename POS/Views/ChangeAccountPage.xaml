<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="POS.Views.ChangeAccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">

    <Grid>
        <StackPanel Padding="20" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock FontSize="25" FontWeight="SemiBold">Thay đổi tài khoản</TextBlock>
            <TextBox x:Name="NewUsernameTextBox" Header="Tên tài khoản mới"
     Width="200" Margin="0,40,0,0"/>
    <PasswordBox x:Name="NewPasswordBox" Header="Mật khẩu mới"
         Margin="0,20,0,0" Width="200"/>

            <PasswordBox x:Name="SecondPasswordBox" Header="Nhập lại mật khẩu"
     Margin="0,20,0,0" Width="200"/>
            <Button Content="Lưu" Padding="28 8" 
    Margin="0,20,0,0" Click="OnSaveAccountClick" HorizontalAlignment="Right"/> 
        </StackPanel>
    </Grid>
</Page>
