<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="POS.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="usernameTextBox" PlaceholderText="Enter Username" Width="300" Margin="10"/>
        <PasswordBox x:Name="passwordBox" PlaceholderText="Enter Password" Width="300" Margin="10"/>
        <CheckBox x:Name="rememberMeCheckBox" Content="Remember Me" Margin="10"/>
        <Button Content="Login" Click="LoginButton_Click" Width="300" Margin="10"/>
    </StackPanel>
</Window>
