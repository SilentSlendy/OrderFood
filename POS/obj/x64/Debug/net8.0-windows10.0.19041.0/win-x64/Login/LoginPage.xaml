<Page
    x:Class="POS.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:ConnectionId='2' x:Name="UsernameTextBox" Header="Username"
                 HorizontalAlignment="Center" VerticalAlignment="Center"
                 Margin="10"
                 Width="200"/>

        <PasswordBox x:ConnectionId='3' x:Name="PasswordBox" Header="Password"
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     Margin="10" 
                     Width="200"/>

        <Button x:ConnectionId='4' Content="Login" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Margin="10"                     />

    </StackPanel>
</Page>

